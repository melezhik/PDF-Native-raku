all :
	$(MAKE) -C src/pdf all

test-coverage :
	export COVERAGE=1;\
	$(MAKE) clean test;\
	$(MAKE) -C src/pdf coverage-reports

test : all
	@prove -e'perl6 -I lib' -v t

memtest : all
	@prove -e'perl6-valgrind-m -I lib' -v t

clean :
	$(MAKE) -C src/pdf $@

realclean :
	$(MAKE) -C src/pdf $@
	@rm -f Makefile

